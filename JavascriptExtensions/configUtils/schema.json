{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "ers": {
      "type": "object",
      "properties": {
        "master_label": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "type": "string" }
          },
          "minProperties": 1
        }
      },
      "patternProperties": {
        "(?!^master_label$)^.*$": { "$ref": "#/$defs/subsection" }
      },
      "required": ["master_label"],
      "additionalProperties": false
    },
    "carControl": {
      "type": "object",
      "properties": {
        "master_label": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "type": "string" }
          }
        }
      },
      "patternProperties": {
        "(?!^master_label$)^.*$": { "$ref": "#/$defs/subsection" }
      },
      "required": ["master_label"],
      "additionalProperties": false
    },
    "fuel": {
      "type": "object",
      "properties": {
        "master_label": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "type": "string" }
          }
        }
      },
      "patternProperties": {
        "(?!^master_label$)^.*$": { "$ref": "#/$defs/subsection" }
      },
      "required": ["master_label"],
      "additionalProperties": false
    },
    "temperature": {
      "type": "object",
      "properties": {
        "master_label": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "type": "string" }
          }
        }
      },
      "patternProperties": {
        "(?!^master_label$)^.*$": { "$ref": "#/$defs/subsection" }
      },
      "required": ["master_label"],
      "additionalProperties": false
    },
    "tyres": {
      "type": "object",
      "properties": {
        "master_label": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "type": "string" }
          }
        },
        "ideal": { "$ref": "#/$defs/idealRangesSubsection" },
        "primary_metric": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "enum": ["Temp", "Pres"]
            }
          },
          "additionalProperties": false
        }
      },
      "patternProperties": {
        "(?!^master_label$|^ideal$|^primary_metric$)^.*$": { "$ref": "#/$defs/subsection" }
      },
      "required": ["master_label"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "idealRangesSubsection": {
      "type": "object",
      "properties": {
        "temp": {
          "type": "object",
          "properties": {
            "property": {
              "$ref": "#/$defs/nestedStringMaps"
            },
            "range": {
              "$ref": "#/$defs/nestedIdealRangeMaps"
            }
          },
          "required": ["range"],
          "additionalProperties": false
        },
        "wear": {
          "type": "object",
          "properties": {
            "property": {
              "$ref": "#/$defs/nestedStringMaps"
            },
            "range": {
              "$ref": "#/$defs/nestedIdealRangeMaps"
            }
          },
          "required": ["range"],
          "additionalProperties": false
        },
        "pres": {
          "type": "object",
          "properties": {
            "property": {
              "$ref": "#/$defs/nestedStringMaps"
            },
            "range": {
              "$ref": "#/$defs/nestedIdealRangeMaps"
            }
          },
          "required": ["range"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "idealRangeMap": {
      "type": "object",
      "properties": {
        "criticalThreshold": { "type": "number" },
        "goodThreshold": { "type": "number" },
        "optimal": { "type": "number" },
        "offset": { "type": "number" }
      },
      "additionalProperties": false,
      "required": ["optimal", "goodThreshold", "criticalThreshold"]
    },
    "idealRangeMaps": {
      "type": "object",
      "patternProperties": {
        "Generic": { "$ref": "#/$defs/idealRangeMap" },
        "^.*$": { "$ref": "#/$defs/idealRangeMap" }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "nestedIdealRangeMaps": {
      "anyOf": [
        { "$ref": "#/$defs/idealRangeMap" },
        {
          "$ref": "#/$defs/idealRangeMaps"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "$ref": "#/$defs/nestedIdealRangeMaps"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "patternProperties": {
                "^.*$": {
                  "$ref": "#/$defs/nestedIdealRangeMaps"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "subsection": {
      "type": "object",
      "properties": {
        "label": {
          "$ref": "#/$defs/nestedStringMaps"
        },
        "property": {
          "$ref": "#/$defs/nestedStringMaps"
        },
        "transformation": {
          "$ref": "#/$defs/nestedStringMaps"
        },
        "popup": {
          "$ref": "#/$defs/nestedStringMaps"
        },
        "optimal": {
          "$ref": "#/$defs/nestedStringMaps"
        },
        "value": {
          "anyOf": [
            { "type": "string" },
            {
              "$ref": "#/$defs/stringMap"
            },
            {
              "$ref": "#/$defs/labelMap"
            },
            {
              "patternProperties": {
                "^.*$": {
                  "anyOf": [
                    { "type": "string" },
                    { "$ref": "#/$defs/stringMap" },
                    {
                      "$ref": "#/$defs/labelMap"
                    },
                    {
                      "patternProperties": {
                        "^.*$": {
                          "anyOf": [
                            { "type": "string" },
                            { "$ref": "#/$defs/stringMap" },
                            {
                              "$ref": "#/$defs/labelMap"
                            },
                            {
                              "patternProperties": {
                                "^.*$": {
                                  "anyOf": [
                                    { "type": "string" },
                                    { "$ref": "#/$defs/stringMap" },
                                    {
                                      "$ref": "#/$defs/labelMap"
                                    }
                                  ]
                                }
                              }
                            }
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      },
      "required": ["property", "label"],
      "additionalProperties": false
    },
    "stringMap": {
      "type": "object",
      "patternProperties": {
        "Generic": { "type": "string" },
        "^.*$": { "type": "string" }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "nestedStringMap": {
      "anyOf": [
        { "type": "string" },
        { "$ref": "#/$defs/stringMap" },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": { "$ref": "#/$defs/stringMap" }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      ]
    },
    "propertyNestedStringMaps": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "patternProperties": {
            "^.*$": {
              "$ref": "#/$defs/nestedStringMap"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "nestedStringMaps": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/stringMap"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "$ref": "#/$defs/nestedStringMap"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "patternProperties": {
                "^.*$": {
                  "$ref": "#/$defs/nestedStringMap"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "labelMap": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "label": { "type": "string" },
            "color": { "type": "string" }
          },
          "required": ["label"],
          "minProperties": 1,
          "additionalProperties": false
        }
      ]
    }
  }
}
